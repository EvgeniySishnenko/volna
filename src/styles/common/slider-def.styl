.slider__list
    button 
        border none
        outline none
        cursor pointer
        color transparent
        // background-color transparent
        &:focus
            outline none
.slick-next-art
    right 30px
    // background-color white
.slick-prev-art 
    left 30px
    // background-color white
.slick-next-art,
.slick-prev-art 
    display: flex
    justify-content center
    align-items center
    width 70px
    height 70px
    border-radius 50%
    padding 0
    position absolute
    top 50%
    
    z-index 10
    box-shadow 0px 0px 20px -10px rgba(0,0,0,0.75)
    
    img
        border-radius 50%
        display block
        max-width 100%
        height 100%
    +adapt(1200px)
        width 40px
        height 40px
.slick-next-art
    transform translate(0, -50%)
.slick-prev-art
    transform translate(0, -50%) rotate(180deg)
.art__slider,
.slider__list,
.slider__item
    width 100%
    height auto
    position relative
.slider-img
    display block
    max-width 100%
    height auto
.art-slick-dots
    position absolute
    bottom -25px
    display: flex;
    justify-content center
    width: 100%;
    padding: 0;
    margin: 0;
    li
        margin-right 15px
        width 20px
        height 20px
        border-radius 50%
        +adapt(768px)
            width 13px
            height 13px
    button
        width 100%
        height 100%
        border-radius 50%
        background-color #ECEDF2
        tran(background)
        &:hover
            background-color red
    .slick-active
        width 23px
        height 23px
        +adapt(768px)
            width 15px
            height 15px
        button
            background-color red


    
