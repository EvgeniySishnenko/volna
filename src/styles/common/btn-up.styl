.block__btn-up
    display none
    width 105px
    height 105px
    border-radius 30%
    box-shadow: 2px 0px 24px -6px rgba(71,71,71,1);
    position fixed
    bottom 10%
    right 3%
    z-index 10
    background-color white
    cursor pointer
    +adapt(1920px)
        width 80px
        height 80px
        box-shadow: 2px 0px 20px -9px rgba(71,71,71,1);
    +adapt(992px)
        width 60px
        height 60px
    +adapt(480px)
        width 50px
        height 50px
.btn__up
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100%
.btn__up--svg
    width 24px
    height 12px
    fill yellow
    +adapt(480px)
        width 18px
        height 8px
.btn__shrt-text
    margin-top 7px
    font('Rr', 12px, #8FA4B9)
    +adapt(480px)
        margin-top 5px