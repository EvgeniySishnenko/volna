.header__nav--list
    display flex
.header__nav
    height 136px
    +adapt(1920px)
        height 100px
    +adapt(992px)
        background-color blue
        height 80px
.wrap-menu
    display flex
    justify-content space-between
    align-items center
    height 136px
    +adapt(1920px)
        height 100px
    +adapt(1300px)
        flex-direction: column
        justify-content center
    +adapt(992px)
        display none
.social--list  
    display flex
.block__social
    display flex
    align-items center
    +adapt(1300px)
        margin-top 15px
.social--item
    margin-left 10px
.social--link
    display block
    width 45px
    height 45px
    border-radius: 30%
    display flex
    justify-content center
    align-items center
    background-color #f1f1f1
    box-shadow: 0px 1px 11px -1px rgba(0,0,0,0.39);
    position relative
    overflow hidden
    +adapt(1300px)
        width 40px
        height 40px
    &:hover
        .social--svg
            transform scale(1.3)
            fill #f1f1f1
        &:before
            animation anim 0.7s 1
            left -10%
            top -10%
    &:before
        content ""
        position absolute
        width 120%
        height 120%
        left -110%
        top 90%
        background blue
        transform rotate(45deg)
.popup-menu
    .social--svg
        fill #f80a53
    .social--link
        &:hover
            border 1px solid #f80a53
        &:before
            background #f80a53
.social--svg
    width 20px
    height 20px
    fill blue
    transition  .2s linear
@keyframes anim
    0%
        left -110%
        top 90%
    50%
        left 10%
        top -30%
    100%
        left -10%
        top -10%
.header__nav--item  
    margin-right 50px
    &:last-child
        margin-right 0
    +adapt(1600px)
        margin-right 20px
.header__nav--link
    font('robotoCondensedRegular', 24px, blue)
    text-transform uppercase
    position relative
    +adapt(1500px)
        font-size 20px
    &:after
        content ''
        display block
        opacity 0
        overflow hidden
        width 0
        height 2px
        background-color #ffff
        position absolute
        bottom 0
        left 50%
        transform translateX(-50%)
        tran(width, .2s)
    &:before
        content ''
        display block
        opacity 1
        overflow hidden
        width 0
        height 2px
        background-color #ffff
        position absolute
        bottom 0
        width 0
        right 50%
        transform translateX(-50%)
        tran(width, .2s)
    &:hover
        &:after
            opacity 1
            overflow visible
            width 50%
            background-color red
            transform translateX(0)
        &:before
            opacity 1
            overflow visible
            width 50%
            background-color red
            transform translateX(0)
.header__nav--link-active
    &:after
        opacity 1
        overflow visible
        width 50%
        background-color red
        transform translateX(0)
    &:before
        opacity 1
        overflow visible
        width 50%
        background-color red
        transform translateX(0)
.social-text
    .shrt-text
        +adapt(1500px)
            font-size 18px
.block__btn
    display none
    +adapt(992px)
        display flex
        justify-content center
        align-items center
        width 100%
        height 80px
        cursor pointer
.btn__menu__wrap--img
    order 2
.btn__menu
    width 70px
    display flex
    flex-direction: column
    align-items center
    justify-content: center

.btn__menu--text
    font('robotoCondensedRegular', 24px, white)
    order 1
.wrap-menu-mobile
    opacity 0
    width 100%
    tran(opacity, .3s)
    position relative
    &:after
        content ''
        position: absolute
        width 90px
        height 31px
        top -70px
        left 50%
        transform translateX(-50%)
        background-image url('../images/curve16.png')
    &:before
        content ''
        position: absolute
        bottom -80px
        left 50%
        transform translateX(-50%)
        background-image url('../images/curve16.png')
        width 90px
        height 31px
.wrap-menu-mobile--show
    opacity 1
    position absolute
    top 20%
    left 50%
    transform translateX(-50%)
    .header__nav--link
        color white
        position relative
        tran()
        &:hover
            color red
        &:after
            display none 
        &:before
            display none
     
    .block__header-nav
        width 100%
    .header__nav--list
        flex-direction column
        justify-content center
        align-items: center
    .header__nav--item
        margin-right 0
        margin-top 15px
    .header__nav--link-active
        color red
    .block__social
        flex-direction column
        align-items: center
        margin-top 40px
    .shrt-text
        color white
    .social--list
        margin-top 10px
  