.preloader
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 100
    background-color blue
    opacity 1
// .preloader-show
//     opacity 0
//     z-index -1
.preloader-list
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display flex
    justify-content center
.preloader-item
    width 60px
    height 60px 
    margin-right 15px
    display flex
    justify-content center
    align-items center
    text-transform uppercase
    border-radius 10px
    background-color white
    &:last-child
        margin-right 0
    +adapt(768px)
        width 45px
        height 45px
.preloader--img
    display block
    width 50px
    height 50px 
    +adapt(768px)
        width 35px
        height 35px
.preloader .preloader-list > li:nth-child(1) {
	-webkit-animation: movement 600ms ease 0ms infinite alternate;
	}
.preloader .preloader-list > li:nth-child(2) {

    -webkit-animation: movement 600ms ease 75ms infinite alternate;
}
.preloader .preloader-list > li:nth-child(3) {

    -webkit-animation: movement 600ms ease 150ms infinite alternate;
}

.preloader .preloader-list > li:nth-child(4) {
   
    -webkit-animation: movement 600ms ease 225ms infinite alternate;
}

.preloader .preloader-list > li:nth-child(5) {

    -webkit-animation: movement 600ms ease 300ms infinite alternate;
}

.preloader .preloader-list > li:nth-child(6) {

    -webkit-animation: movement 600ms ease 375ms infinite alternate;
}

.preloader .preloader-list > li:nth-child(7) {
    -webkit-animation: movement 600ms ease 450ms infinite alternate;
}

.preloader .preloader-list > li:nth-child(8) {

    -webkit-animation: movement 600ms ease 525ms infinite alternate;
}

   
@keyframes movement 
    from 
        -webkit-transform: scale(1.0) translateY(0px) rotateX(0deg);
        box-shadow: 0 0 0 rgba(0,0,0,0);
    
    to 
        -webkit-transform: scale(1.5) translateY(-25px) rotateX(45deg);
        box-shadow: 0 25px 40px rgba(0,0,0,0.4);
		
		
	